<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardViewColor"
    android:layout_width="350dp"
    android:layout_gravity="center_horizontal"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/itemLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">


        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="31dp"
            android:layout_height="37dp"
            app:layout_constraintTop_toTopOf="@id/cardViewColor"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="5dp"
            android:textColorLink="@color/white"
            app:layout_constraintRight_toLeftOf="@id/title_item"
            tools:ignore="NotSibling" />

        <TextView
            android:id="@+id/title_item"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:text="@string/title_item"
            android:paddingLeft="20dp"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/cardViewColor"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/cardViewColor"
            tools:ignore="NotSibling" />

        <TextView
            android:id="@+id/desc_item"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="20dp"
            android:text="@string/description_item"
            app:layout_constraintTop_toBottomOf="@id/title_item"
            app:layout_constraintBottom_toBottomOf="@id/cardViewColor"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"

            android:textColor="@color/white"
            tools:ignore="NotSibling" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>